---
import DefaultBtn from "@components/DefaultBtn/DefaultBtn.astro";

interface Props extends astroHTML.JSX.InputHTMLAttributes {
  className?: string;
}

const { className, ...rest } = Astro.props;
---

<div class:list={["input-btn", className]}>
  <input type="text" {...rest} class="input-btn__input" />
  <DefaultBtn className="input-btn__btn" color="secondary">
    <slot>Text</slot>
  </DefaultBtn>
</div>
