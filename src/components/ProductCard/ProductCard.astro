---
import DefaultBtn from "@components/DefaultBtn/DefaultBtn.astro";
import { Sprite } from "astro-icon";

interface Props {
  title?: string;
  text?: string;
  img?: string;
  className?: string;
}

const { title, text, img, className } = Astro.props;
---

<div class:list={["product-card", className]}>
  <div class="product-card__img">
    <img src={img} alt="" />
  </div>
  <div class="product-card__container">
    <div class="product-card__head">
      {title && <h6 class="title-5 product-card__title" set:html={title} />}
      {text && <span class="body-1 product-card__text" set:html={text} />}
    </div>
    <DefaultBtn
      as="a"
      href="#"
      className="product-card__btn"
      viewType="icon"
      theme="stroke"
    >
      <Sprite name="chevron-right" />
    </DefaultBtn>
  </div>
</div>
