              data-fade-anim
              title="Стоматологическая установка mercury"
              price="385 000"
              img="./img/products/prod-11.png"
            />
            <ProductCard
              data-fade-anim
              title="Стоматологическая установка mercury"
              price="385 000"
              img="./img/products/prod-12.png"
            />
            <ProductCard
              data-fade-anim
              title="Стоматологическая установка mercury"
              price="385 000"
              img="./img/products/prod-13.png"
            />
          </div>
          <div class="category__pagination">
            <DefaultBtn viewType="width" theme="stroke">
              Показать еще
            </DefaultBtn>

            <Pagination />
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</Layout>
