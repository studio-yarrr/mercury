---
import DefaultBtn from "@components/DefaultBtn/DefaultBtn.astro";
import ImgInput from "@components/ImgInput/ImgInput.astro";
import TextInput from "@components/TextInput/TextInput.astro";
import Footer from "@modules/Footer/Footer.astro";
import Header from "@modules/Header/Header.astro";
import PAContainer from "@modules/PA/PAContainer/PAContainer.astro";
import PAOrder from "@modules/PA/PAOrder/PAOrder.astro";
import PAProfile from "@modules/PA/PAProfile/PAProfile.astro";
import { Sprite } from "astro-icon";
import Layout from "src/layouts/Layout.astro";
---

<Layout>
  <Header />

  <PAContainer activeIndex={3}>
    <div class="pa__container pa-order pa-profile pa-profile-edit">
      <div class="pa-profile__head">
        <div class="pa-profile__head-inner">
          <a href="#" class="body-2 medium primary-hover pa-profile__back">
            <Sprite name="chevron-left" />
             Вернуться назад
          </a>
          <h5 class="heading-5 bold pa-order__title">Изменить профиль</h5>
        </div>
      </div>

      <form action="#" class="pa-profile__form" data-action="form-submit">
        <ImgInput />
        <div class="pa-profile__inputs">
          <TextInput
            className="fv"
            color="inverse"
            label="Имя"
            value="Илья"
            required
            data-action="required-text"
          />
          <TextInput
            className="fv"
            color="inverse"
            label="Фамилия"
            value="Никитин"
            required
            data-action="required-text"
          />
          <TextInput
            className="fv"
            color="inverse"
            label="Электронная почта"
            value="Kolysobakin@gmail.com"
            required
            data-action="required-email"
          />
          <TextInput
            className="fv"
            color="inverse"
            label="Телефон"
            value="+79612475964"
            required
            data-action="required-text"
            data-mask="+9 999 999 99 99"
            data-mask-init
          />
          <TextInput
            className="fv"
            color="inverse"
            label="Пароль"
            value="fsas123dsa"
            required
            data-action="required-text"
            isPassword
            readonly
            type="password"
          />
          <a href="#" class="body-4 medium pa-profile-edit__link">
            Изменить пароль
          </a>
        </div>

        <div class="pa-profile__btns">
          <DefaultBtn
            type="submit"
            viewType="width"
            color="inverse"
            className="pa-profile__add-btn"
          >
            Сохранить
          </DefaultBtn>
        </div>
      </form>
    </div>
  </PAContainer>

  <Footer />
</Layout>
